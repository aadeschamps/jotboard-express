{
  "/api/users": {
    "controller": "users",
    "post": {
      "operation": "createUser"
    }
  },
  "/api/users/:userId": {
    "auth": true,
    "controller": "users",
    "get": {
      "operation": "getUser"
    }
  },
  "/api/sessions": {
    "controller": "sessions",
    "post": {
      "operation": "createSession"
    },
    "delete": { 
      "operation": "deleteSession"
    }
  }
}